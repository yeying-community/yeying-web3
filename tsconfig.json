{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "declaration": true,
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules" ],
}
